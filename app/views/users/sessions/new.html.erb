
<aside id="zan_login-2">
  <div class="panel panel-zan">
    <div class="panel-heading">请登录</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "login-form clearfix", id: "edit_post_45" } ) do |f| %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-user"></i>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"log", size:"20" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-lock"></i>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "pwd", size:"20" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "记住我"  %>
            <% end -%>
          </div>
        </div>

        <%= f.submit "登录", class: "btn btn-inverse-primary pull-left"%>
        <%= link_to "注册", new_registration_path(resource_name), class:"btn btn-inverse-primary pull-right" %>
    <% end %>
  </div>
  <div style="font-size: 15px">
      <ul>
        <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
                <li>
                  <%= link_to "第三方登陆： #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
                </li>
            <% end -%>
        <% end -%>
        <li>
          <%= link_to "忘记密码?", new_password_path(resource_name) %>
        </li>
      </ul>
  </div>
</aside>








